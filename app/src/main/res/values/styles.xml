<resources>

    <!-- Base application theme. -->
    <style name="AppThemeDay" parent="android:Theme.DeviceDefault">
        <!-- Customize your theme here. -->

       <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackgroundLight</item>

    </style>
    <style name="AppThemeNight" parent="android:Theme.DeviceDefault">
        <!-- Customize your theme here. -->

       <item name="android:colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimaryDarkNight</item>


    </style>

    <style name="CheckBoxStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:checked">true</item>

    </style>

</resources>
